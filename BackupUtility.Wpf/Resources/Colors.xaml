<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="PressedColorKey">#FFADBDF5</Color>
    <Color x:Key="MouseOverColorKey">#FFE6EFFF</Color>
    <Color x:Key="HighlightColorKey">#FF3288FA</Color>

    <SolidColorBrush x:Key="HighlightBrushKey" Color="#FF3288FA"/>
    <SolidColorBrush x:Key="MouseOverBrushKey" Color="{StaticResource MouseOverColorKey}"/>
    <SolidColorBrush x:Key="ButtonHighlightBrushKey" Color="{StaticResource MouseOverColorKey}"/>

</ResourceDictionary>